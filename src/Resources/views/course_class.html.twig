

{% extends 'kookaburra.html.twig' %}

{% set moduleName = 'Departments' %}
{% set module = {'baseURL': 'departments', 'crumbs': [
    {uri: 'departments__list', name: 'Departments'},
    {uri: 'departments__details', uri_params: {department: department.id}, name: department.name},
    {uri: 'departments__course_details', uri_params: {department: department.id, course: course.id} , name: course.name ~ extra}
], title: class.courseClassName(true) } %}
{% set breadcrumbs = 'new' %}

{% block content %}
    <h2>{{ class.courseClassName(true) }}</h2>
    <p>{{ 'Course'|trans }}: {{ course.name }}</p>
    <div class="flex flex-wrap rounded-sm bg-gray-100 border py-2">
        {% for action in classAction %}
            <div class="flex-col w-1/2 sm:w-1/3 p-4 text-center">
                <a href="{{ path(action.url, action.params) }}">
                    <div style="min-height: 5rem">
                        <span class="{{ action.icon }}" title="{{ action.name|trans }}"></span>
                    </div>
                    <div class="font-bold text-xs">
                         {{ action.name|trans }}
                    </div>
                </a>

            </div>
        {% endfor %}
    </div>
    {% include '@KookaburraDepartments/components/class_list.html.twig' %}
{% endblock content %}
